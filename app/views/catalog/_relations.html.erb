<% if @document.relations.exist? %>
    <div class="panel panel-default show-tools">
      <div class="panel-heading">
        Data Relations
      </div>

      <div class="panel-body">
        <ul class="nav">
          <% unless @document.relations.ancestors.blank? %>
              Ancestors:
              <% @document.relations.ancestors.each do |ancestor| %>
                  <li>
                    <%= link_to "#{Rails.application.config.relative_url_root}/catalog/#{ancestor['layer_slug_s']}" do %>
                        <span class='geoblacklight geoblacklight-relations'></span> <%= ancestor['dc_title_s'] %>
                    <% end %>
                  </li>
              <% end %>
          <% end %>
          <% unless @document.relations.descendents.blank? %>
              Descendents:
              <% @document.relations.descendents.each do |descendent| %>
                  <li>
                    <%= link_to "#{Rails.application.config.relative_url_root}/catalog/#{descendent['layer_slug_s']}" do %>
                        <span class='geoblacklight geoblacklight-relations'></span> <%= descendent['dc_title_s'] %>
                    <% end %>
                  </li>
              <% end %>
          <% end %>

        </ul>
      </div>
    </div>
<% end %>